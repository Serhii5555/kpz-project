@model HotelManagement.Models.Service

@{
    ViewData["Title"] = "Create Service";
}

<div class="mx-auto py-5 px-5 max-w-lg">
    <h1 class="text-4xl font-bold text-center mb-6">Create New Service</h1>

    <form asp-controller="Services" asp-action="Create" method="post" class="space-y-4">
        <div class="mb-4">
            <label for="service_name" class="block text-sm font-medium text-gray-700">Service Name</label>
            <input asp-for="service_name" type="text" class="mt-1 block w-full border-0 border-b-2 border-gray-300 py-1 outline-none focus:border-gray-700 px-2" maxlength="50" required />
            <span asp-validation-for="service_name" class="text-danger text-red-500"></span>
        </div>

        <div class="mb-4">
            <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea asp-for="description" class="mt-1 block w-full border-0 border-b-2 border-gray-300 py-1 outline-none focus:border-gray-700 px-2" maxlength="500"></textarea>
            <span asp-validation-for="description" class="text-danger text-red-500"></span>
        </div>

        <div class="mb-4">
            <label for="price" class="block text-sm font-medium text-gray-700">Price</label>
            <input asp-for="price" type="number" step="0.01" class="mt-1 block w-full border-0 border-b-2 border-gray-300 py-1 outline-none focus:border-gray-700 px-2" />
            <span asp-validation-for="price" class="text-danger text-red-500"></span>
        </div>

        <div class="flex justify-between">
            <a href="@Url.Action("Index", "Services")" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-md">Cancel</a>
            <button type="submit" class="bg-indigo-700 hover:bg-indigo-800 text-white px-4 py-2 rounded-md">Create</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}